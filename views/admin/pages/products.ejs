<%- include('../partials/header') %>
<%- include('../partials/sidebar') %>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Quản lý Sản phẩm</h1>
    <a href="/admin/products/add" class="btn btn-success">
        <i class="fas fa-plus"></i> Thêm sản phẩm mới
    </a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Tồn kho</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody id="products-table-body"> <!-- Thêm ID cho tbody -->
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <tr id="product-row-<%= product.id %>"> <!-- Thêm ID cho mỗi dòng -->
                            <td><%= product.id %></td>
                            <td><img src="<%= product.img || '/images/placeholder.png' %>" alt="" width="50"></td>
                            <td><%= product.ten_sach %></td>
                            <td><%= parseFloat(product.gia_bia).toLocaleString('vi-VN') %>đ</td>
                            <td><%= product.so_luong_ton_kho %></td>
                            <td>
                                <a href="/admin/products/edit/<%= product.id %>" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                <!-- SỬA DÒNG NÀY: Thêm class và data-id -->
                                <button class="btn btn-sm btn-danger delete-product-btn" data-id="<%= product.id %>">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="text-center">Không có sản phẩm nào.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<!-- Phân trang sẽ được thêm vào đây -->

<!-- Thêm file script quản lý -->
<script src="/js/admin-product-list.js"></script>

<%- include('../partials/footer') %>